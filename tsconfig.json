{
    "include": [
        "src"
    ],
    "exclude": [
        "server/*",
        "config/*"
    ],
    "compilerOptions": {
        "outDir": "./build/",
        "sourceMap": true,
        "incremental": true,
        "noImplicitAny": true,
        "module": "esnext",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "target": "ES2017",
        "jsx": "react",
        "types": [
            //(various types, e.g. jquery, core-js),
            "chrome"
        ],
        "baseUrl": "src",
        "paths": {
            "config": [
                "../config"
            ]
        },
        "plugins": [
            {
                "name": "typescript-plugin-css-modules"
            }
        ]
    }
}