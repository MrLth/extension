{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "incremental": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es2016",
        "jsx": "react",
        "types": [
            //(various types, e.g. jquery, core-js),
            "chrome"
        ],
        "baseUrl": ".",
        "paths": {
            "@api": ["src/api"],
            "@api/*": ["src/api/*"],
            "@store": ["src/store"],
            "@store/*": ["src/store/*"],
            "@img/*": ["public/img/*"]
          }
    }
}